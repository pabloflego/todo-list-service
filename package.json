{
  "name": "todo-list-service",
  "version": "1.0.0",
  "description": "Backend service built with NestJS and TypeORM (SQLite) to manage to-do items with automatic past-due handling",
  "main": "dist/src/main",
  "scripts": {
    "build": "nest build",
    "dev": "nest start --watch",
    "start": "node .",
    "test:unit": "vitest run --config vitest.config.mts --coverage",
    "watch:unit": "vitest --config vitest.config.mts",
    "test:e2e": "vitest run --config vitest.e2e.config.mts --coverage",
    "watch:e2e": "vitest --config vitest.e2e.config.mts",
    "test:all": "pnpm test:unit && pnpm test:e2e",
    "check": "tsc --noEmit",
    "docker:build": "VERSION=$(node -p \"require('./package.json').version\") docker-compose build",
    "docker:up": "VERSION=$(node -p \"require('./package.json').version\") docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.23.0+sha512.21c4e5698002ade97e4efe8b8b4a89a8de3c85a37919f957e7a0f30f38fbc5bbdd05980ffe29179b2fb6e6e691242e098d945d1601772cad0fef5fb6411e2a4b",
  "dependencies": {
    "@nestjs/common": "^11.1.9",
    "@nestjs/core": "^11.1.9",
    "@nestjs/platform-express": "^11.1.9",
    "@nestjs/swagger": "^11.2.3",
    "@nestjs/typeorm": "^11.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.12",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.9",
    "@swc/core": "^1.15.3",
    "@types/node": "^24.10.1",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.13",
    "supertest": "^7.1.4",
    "typescript": "^5.9.3",
    "unplugin-swc": "^1.5.9",
    "vite-tsconfig-paths": "^5.1.4",
    "@types/express": "^4.17.21",
    "vitest": "^4.0.13"
  }
}
